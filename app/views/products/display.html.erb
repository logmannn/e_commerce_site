<div class="container">
  <p>Admin: <%= link_to "Edit Product", edit_product_path(@product) %> | <%= link_to "Delete Product", product_path, :data => {
      :confirm => "You sure?", :method => "delete"
    } %></p>
</div>

<div class="container">
  <h3>Product Details</h3>
</div>

<div class="container">
  <h3><%= @product.name %></h3>
  <h4><%= @product.description %></h4>
  <h4><%= number_to_currency @product.price %></h4>
</div>

<div class="container">
  <h4><%= link_to "Go Home", products_path %></h4>
</div>
